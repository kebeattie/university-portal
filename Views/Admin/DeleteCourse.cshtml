@model UniversityPortal.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container">
    <h1>Delete Course</h1>

    <div class="alert alert-danger">
        <h4>⚠️ Warning</h4>
        <p>Are you sure you want to delete this course? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3>@Model.CourseCode - @Model.CourseName</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Course Code</dt>
                <dd class="col-sm-9">@Model.CourseCode</dd>

                <dt class="col-sm-3">Course Name</dt>
                <dd class="col-sm-9">@Model.CourseName</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Instructor</dt>
                <dd class="col-sm-9">@Model.Instructor</dd>

                <dt class="col-sm-3">Credits</dt>
                <dd class="col-sm-9">@Model.Credits</dd>

                <dt class="col-sm-3">Enrollment</dt>
                <dd class="col-sm-9">@Model.CurrentEnrolled / @Model.MaxStudents</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
            </dl>

            @if (Model.Enrolments.Any())
            {
                <div class="alert alert-warning">
                    <strong>Note:</strong> This course has @Model.Enrolments.Count enrolment(s). 
                    Deleting this course will also remove all associated enrolment records.
                </div>
            }

            <form asp-action="DeleteCourse">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
